@page
@model CreateModel
@{
    ViewData["Title"] = "Create Task";
}

<h1 class="text-light">@ViewData["Title"]</h1>
<p class="text-light">Here you can create a new product</p>

<div class="d-flex text-left justify-content-center">
    <form method="post">
        <div class="row">
            <div class="col-12">
                <label for="name" class="text-light fs-3">Name</label>
                <input type="text" class="form-control " style="font-size: 1.2rem;" id="name" name="Name"
                    placeholder="Name" required>
                <div class="invalid-feedback">
                    Please enter a valid name.
                </div>
            </div>
            <div class="col-12 mt-5">
                <label for="description" class="text-light fs-3">Description</label>
                <textarea class="form-control" style="height: 100px; font-size: 1.2rem;" id="description"
                    name="Description" placeholder="Description" required></textarea>
                <div class="invalid-feedback">
                    Please enter a valid description.
                </div>
            </div>
        </div>
        <div class="col-12 mt-4">
            <button class="btn btn-outline-success" type="submit">Create</button>
        </div>
    </form>
</div>
